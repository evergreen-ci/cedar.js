{
    "compilerOptions": {
      "paths": { "*": ["types/*"] },
      "baseUrl": ".",
      "outDir": "./lib",
      "module": "commonjs",
      "target": "es6",
      "lib": ["es6", "dom"],
      "sourceMap": true,
      "moduleResolution": "node",
      "rootDir": "src",
      "forceConsistentCasingInFileNames": true,
      "noImplicitReturns": true,
      "noImplicitThis": true,
      "noImplicitAny": true,
      "importHelpers": true,
      "strictNullChecks": false,
      "suppressImplicitAnyIndexErrors": true,
      "noUnusedLocals": true
    },
    "exclude": [
      "node_modules",
      "build",
      "acceptance-tests",
      "webpack",
      "jest",
      "lib"
    ]
  }
